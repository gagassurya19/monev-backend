{
  "name": "monev-backend",
  "version": "1.0.0",
  "description": "Corporate-standard HAPI.js backend with MySQL",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "setup:db": "bash scripts/setup_database.sh",
    "db:create": "mysql -u root -p < scripts/setup_database.sql",
    "db:tables": "mysql -u monev_user -pmonev_password monev_db < scripts/create_monev_tables.sql",
    "db:backup": "bash scripts/backup_database.sh",
    "db:migrate": "mysql -u monev_user -pmonev_password monev_db < scripts/migrate_data.sql",
    "db:test": "node scripts/test_connection.js",
    "test:sas-etl": "node scripts/test-sas-etl.js",
    "test:sas-etl-api": "node scripts/test-sas-etl-api.js",
    "test:sas-etl-auth": "node scripts/test-sas-etl-with-auth.js",
    "test:celoe-api": "node scripts/test-celoe-api-proxy.js"
  },
  "keywords": [
    "hapi",
    "mysql",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.4.0",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "hapi-cors": "^1.0.3",
    "hapi-swagger": "^17.3.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.1",
    "node-cron": "^4.2.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
